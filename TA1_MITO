def count_characters(string):
    vowels = "aeiouAEIOU"
    consonants = "bcdfghjklmnpqrstvwxyzBCDFGHJKLMNPQRSTVWXYZ"
    
    vowel_count = consonant_count = space_count = other_count = 0
    
    for char in string:
        if char in vowels:
            vowel_count += 1
        elif char in consonants:
            consonant_count += 1
        elif char == " ":
            space_count += 1
        else:
            other_count += 1
    
    print(f"Vowels: {vowel_count}")
    print(f"Consonants: {consonant_count}")
    print(f"Spaces: {space_count}")
    print(f"Other characters: {other_count}")

input_string = input("Enter a string: ")
count_characters(input_string)

#2

def sum_of_digits(string):
    total = 0
    for char in string:
        if char.isdigit():  # Check if the character is a digit
            total += int(char)
    
    print(f"Sum of digits: {total}")

# Example usage
input_string = input("Enter a string containing digits: ")
sum_of_digits(input_string)

#3a
def pattern_a(n):
    for i in range(1, n+1):
        print(" " * (n - i) + "".join(str(j) for j in range(1, i + 1)))

# Example usage
pattern_a(5)

#3b
def pattern_b(n):
    i = 1
    while i <= n:
        if i % 2 != 0:  # Print only for odd numbers
            print(str(i) * i)
        i += 1

# Example usage
pattern_b(7)

